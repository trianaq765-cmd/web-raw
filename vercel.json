{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/raw/(.*)", "dest": "/api/raw/$1" },
    { "src": "/view/(.*)", "dest": "/public/view.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
